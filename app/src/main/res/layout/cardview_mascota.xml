<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_contacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardView_marginBotton"
    card_view:cardCornerRadius="@dimen/cardCornerRadius">

    <LinearLayout
        android:id="@+id/cardViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borde">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alturaImagen"
            android:src="@drawable/christmas_star_96"

            android:background="@drawable/borde"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borde">
            <ImageView
                android:id="@+id/imgB_Favorite"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/thumb_up_96"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/nombre"
                    android:textSize="@dimen/nombre_cardView"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    />

                <TextView
                    android:id="@+id/tvRanking"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/ranking"/>

                <ImageView
                    android:id="@+id/imgB_Ranking"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/dog_bone_96_2"
                    />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>




</android.support.v7.widget.CardView>